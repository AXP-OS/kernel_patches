--- a/fs/cifs/inode.c
+++ b/fs/cifs/inode.c
@@ -2194,6 +2194,15 @@ cifs_set_file_size(struct inode *inode, struct iattr *attrs,
 	if (rc == 0) {
 		cifsInode->server_eof = attrs->ia_size;
 		cifs_setsize(inode, attrs->ia_size);
