@@ -50,6 +50,8 @@ CONFIG_CC_STACKPROTECTOR_STRONG=y
 CONFIG_LTO_CLANG=y
 CONFIG_CFI_CLANG=y
 CONFIG_SHADOW_CALL_STACK=y
